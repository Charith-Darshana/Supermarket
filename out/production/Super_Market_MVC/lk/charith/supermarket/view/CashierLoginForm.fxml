      </TextField>
      <PasswordField fx:id="txtPassword" focusTraversable="false" layoutX="53.0" layoutY="200.0" promptText="Password">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </PasswordField>
      <Button fx:id="btnSignin" layoutX="111.0" layoutY="286.0" mnemonicParsing="false" onAction="#signOnAction" prefHeight="38.0" prefWidth="125.0" style="-fx-background-color: green;" text="Sign In" textFill="WHITE">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
